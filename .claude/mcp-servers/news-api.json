{
  "name": "news-api",
  "description": "Industry and topic-based news aggregation through News API",
  "provider": "NewsAPI",
  "authentication": {
    "type": "API Key",
    "placeholder": "{USER_NEWS_API_KEY}",n    "scope": "News aggregation and search"
  },
  "capabilities": [
    "get_top_headlines",
    "search_everything",
    "get_sources",
    "get_by_category",
    "get_by_country",
    "get_by_language",
    "get_by_keyword",
    "get_trending",
    "get_industry_news"
  ],
  "rate_limits": {
    "requests_per_minute": 30,
    "calls_per_day": 500,
    "articles_per_request": 100
  },
  "error_handling": {
    "authentication_errors": "Validate API key",
    "rate_limit_exceeded": "Implement exponential backoff",
    "no_results": "Try different keywords or sources",
    "network_errors": "Retry with exponential backoff"
  },
  "used_by": [
    "News Aggregator skill",
    "Weekly Review workflow"
  ]
}