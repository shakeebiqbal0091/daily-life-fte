{
  "name": "brave-search",
  "description": "Web research and fact-checking through Brave Search API",
  "provider": "Brave",
  "authentication": {
    "type": "API Key",
    "placeholder": "{USER_BRAVE_SEARCH_KEY}",
    "scope": "Web search and results"
  },
  "capabilities": [
    "search_web",
    "get_suggestions",
    "get_related_searches",
    "get_snippets",
    "get_top_results",
    "get_image_results",
    "get_video_results",
    "get_news_results"
  ],
  "rate_limits": {
    "requests_per_minute": 30,
    "searches_per_day": 1000,
    "results_per_search": 100
  },
  "error_handling": {
    "authentication_errors": "Validate API key",
    "rate_limit_exceeded": "Implement exponential backoff",
    "no_results": "Try different search terms",
    "network_errors": "Retry with exponential backoff"
  },
  "used_by": [
    "Research Assistant skill",
    "News Aggregator skill",
    "Learning Curator skill"
  ]
}